{
  "openapi": "3.0.1",
  "info": {
    "title": "My API",
    "version": "v1"
  },
  "paths": {
    "/MessageBroker/SendMessage": {
      "post": {
        "tags": [
          "MessageBroker"
        ],
        "parameters": [
          {
            "name": "message",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "exchangeName",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "Default Exchange"
            }
          },
          {
            "name": "routingKey",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "Default Routing Key"
            }
          },
          {
            "name": "queueName",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "Default Queue"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/MessageBroker/GetMessage": {
      "post": {
        "tags": [
          "MessageBroker"
        ],
        "parameters": [
          {
            "name": "queueName",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "default"
            }
          },
          {
            "name": "count",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetMessagesModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/GetMessagesModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/GetMessagesModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GetMessagesModel": {
        "type": "object",
        "properties": {
          "login": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}